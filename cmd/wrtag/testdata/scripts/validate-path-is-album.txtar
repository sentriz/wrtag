env WRTAG_DIFF_WEIGHT='label 0, catalogue num 0, media format 0'
env WRTAG_PATH_FORMAT='albums/{{ artistsString .Release.Artists }}/{{ .Release.Title }}/{{ pad0 2 .Track.Position }} {{ .Track.Title }}{{ .Ext }}'

# set up files, already in correct place
exec tag write 'albums/Khruangbin/A LA SALA/01 Fifteen Fifty‐Three.flac'    tracknumber  1 , title 'Fifteen Fifty‐Three'
exec tag write 'albums/Khruangbin/A LA SALA/02 May Ninth.flac'              tracknumber  2 , title 'May Ninth'
exec tag write 'albums/Khruangbin/A LA SALA/03 Ada Jean.flac'               tracknumber  3 , title 'Ada Jean'
exec tag write 'albums/Khruangbin/A LA SALA/04 Farolim de Felgueiras.flac'  tracknumber  4 , title 'Farolim de Felgueiras'
exec tag write 'albums/Khruangbin/A LA SALA/05 Pon Pón.flac'                tracknumber  5 , title 'Pon Pón'
exec tag write 'albums/Khruangbin/A LA SALA/06 Todavía Viva.flac'           tracknumber  6 , title 'Todavía Viva'
exec tag write 'albums/Khruangbin/A LA SALA/07 Juegos Y Nubes.flac'         tracknumber  7 , title 'Juegos Y Nubes'
exec tag write 'albums/Khruangbin/A LA SALA/08 Hold Me Up (Thank You).flac' tracknumber  8 , title 'Hold Me Up (Thank You)'
exec tag write 'albums/Khruangbin/A LA SALA/09 Caja de La Sala.flac'        tracknumber  9 , title 'Caja de La Sala'
exec tag write 'albums/Khruangbin/A LA SALA/10 Three From Two.flac'         tracknumber 10 , title 'Three From Two'
exec tag write 'albums/Khruangbin/A LA SALA/11 A Love International.flac'   tracknumber 11 , title 'A Love International'
exec tag write 'albums/Khruangbin/A LA SALA/12 Les Petits Gris.flac'        tracknumber 12 , title 'Les Petits Gris'
         
exec tag write 'albums/Khruangbin/A LA SALA/*.flac' musicbrainz_albumid 'ef72b5f2-1bd6-4e0a-afd1-e97886fb47e7'
exec tag write 'albums/Khruangbin/A LA SALA/*.flac' album               'A LA SALA'
exec tag write 'albums/Khruangbin/A LA SALA/*.flac' albumartist         'Khruangbin'
exec tag write 'albums/Khruangbin/A LA SALA/*.flac' artist              'Khruangbin'

exec touch 'albums/Khruangbin/A LA SALA/cover.png'

exec find albums
cp stdout layout-before

# should be deleted
exec touch 'albums/Khruangbin/A LA SALA/extra-file'

exec wrtag move 'albums/Khruangbin/A LA SALA'
stderr 'score=100.00%'

# move again to make sure we're in a consistent state
exec wrtag move 'albums/Khruangbin/A LA SALA'
stderr 'score=100.00%'

# compare to initial state
exec find albums
cp stdout layout-after
cmp layout-before layout-after

# move album up
mv 'albums/Khruangbin/A LA SALA' albums/tmpkhruangbinsala
exec wrtag move albums/tmpkhruangbinsala

# compare to initial state
exec find albums
cp stdout layout-after
cmp layout-before layout-after

# oops, accidentally move the whole artist dir as if it were an album
! exec wrtag move 'albums/Khruangbin'
stderr '\bvalidate tree\b'
