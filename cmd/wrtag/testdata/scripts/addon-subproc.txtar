env WRTAG_PATH_FORMAT='albums/{{ .Release.Title }}/{{ .Track.Position }}{{ .Ext }}'
env WRTAG_LOG_LEVEL=debug
env WRTAG_ADDON='subproc sh -c "true", subproc sh echo-script out <directory> <cover> <files>'

exec wrtag -config
stdout 'addon.*subproc \("sh" "-c" "true"\), subproc \("sh" "echo-script" "out" "<directory>" "<cover>" "<files>"\)'

exec tag write 'kat_moda/1.flac'
exec tag write 'kat_moda/2.flac'
exec tag write 'kat_moda/3.flac'
exec tag write 'kat_moda/*.flac' musicbrainz_albumid 'e47d04a4-7460-427d-a731-cc82386d85f1'

exec wrtag copy -yes kat_moda
cmp out exp-out

-- echo-script --
out="$1"
shift
echo "dir ${1#$PWD/}" >>"$out"
shift
echo "cover ${1#$PWD/}" >>"$out"
shift
echo "file count $#" >>"$out"
for f in "$@"; do
    echo "file ${f#$PWD/}" >>"$out"
done

-- exp-out --
dir albums/Kat Moda
cover albums/Kat Moda/cover.jpg
file count 3
file albums/Kat Moda/1.flac
file albums/Kat Moda/2.flac
file albums/Kat Moda/3.flac
